#!/usr/bin/env bash

set -eu
set -o pipefail

################################################################################
TOP=$(dirname "$0")
key_dir=$HOME/keys/ssh
host=$(hostname)

################################################################################
export SSH_ASKPASS=$TOP/ssh-passphrase
export SSH_ASKPASS_REQUIRE=force

################################################################################
function load_ssh_key() {
  export KEY_TO_ADD=$1
  ssh-add "$key_dir/$KEY_TO_ADD"
}

################################################################################
function main() {
  keys=(
    clemson.id_rsa
    code.rfa.sc.gov.id_rsa
    scors.id_rsa
    deploy.id_ed25519
    webmaster.id_ed25519
  )

  if [ -e "$key_dir/$host.id_ed25519" ]; then
    keys+=("$host.id_ed25519")
  fi

  for key in "${keys[@]}"; do
    load_ssh_key "$key"
  done

  if [ -n "${DISPLAY:-}" ]; then
    notify-send \
      -a ssh-agent \
      -i stock_add \
      "SSH Keys" \
      "All ssh keys have been added to the agent."
  fi
}

################################################################################
main "$@"
